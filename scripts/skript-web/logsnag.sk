#
#	Configuration
#

# Options
options:
	
	# LogSnag Settings
	key: *insert_api_key*
	default_project: *insert_project*

	# Misc Settings
	minecraft_log_message: &8[&fLogSnag&8] &f%{_body}%
	minecraft_log: true

#
#	API Functions
#

# Logsnag Function
function logsnag(event: string, desc: string, channel: string, notify: boolean = false, icon: string = "ðŸŒŽ", project: string = "{@default_project}"):
	create post request:
		web-url: "https://api.logsnag.com/v1/log"
		headers:
			"Authorization": "Bearer {@key}" 
			"Content-Type": "application/json"
		body:
			"event": {_event}
			"channel": {_channel}
			"project": {_project}
			"description": {_desc}
			"notify": {_notify}
			"icon": {_icon}
		execute:
			{@minecraft_log} is true
			set {_body} to {_skript-web-reply}
			message "{@minecraft_log_message}" to console
	execute last post request